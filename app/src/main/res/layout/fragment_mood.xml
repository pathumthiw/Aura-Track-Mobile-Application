<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".fragments.MoodFragment">

    <!-- Floating Action Elements Background -->
    <View
        android:id="@+id/floating_bubble_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="-40dp"
        android:alpha="0.1"
        android:background="@drawable/floating_circle"
        android:elevation="0dp" />

    <View
        android:id="@+id/floating_bubble_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="150dp"
        android:alpha="0.08"
        android:background="@drawable/floating_circle"
        android:elevation="0dp" />

    <!-- App Bar with Gradient -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_gradient"
            android:elevation="0dp"
            app:title="@string/mood_title"
            app:titleTextAppearance="@style/Widget.Material3.Toolbar"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Add Mood Card with Glass Morphism -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mood_input_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_glass"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="32dp"
                            android:background="@drawable/accent_bar"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/add_mood"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01" />

                        <ImageView
                            android:id="@+id/mood_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_mood"
                            android:alpha="0.8"
                            app:tint="@color/accent_purple" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/select_mood"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/text_secondary"
                        android:alpha="0.9" />

                    <!-- Emoji Selector with Modern Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:rowCount="2"
                        android:alignmentMode="alignBounds"
                        android:columnOrderPreserved="false"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_happy"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ˜Š"
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_sad"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ˜¢"
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_angry"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ˜ "
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_excited"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ¤©"
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_calm"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ˜Œ"
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_tired"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ˜´"
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_stressed"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ˜°"
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/mood_card_bg"
                            app:strokeWidth="0dp">

                            <Button
                                android:id="@+id/button_neutral"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:text="ðŸ˜"
                                android:textSize="32sp"
                                android:background="?attr/selectableItemBackground"
                                android:stateListAnimator="@animator/mood_button_animator" />
                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                    <!-- Note Input with Modern Style -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:hint="@string/mood_note"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="@color/accent_purple"
                        app:hintTextColor="@color/accent_purple"
                        app:startIconDrawable="@drawable/note"
                        app:startIconTint="@color/accent_purple"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_mood_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLines="3"
                            android:minHeight="80dp"
                            android:gravity="top|start"
                            android:padding="16dp"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Save Button with Gradient -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_save_mood"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02"
                        app:cornerRadius="16dp"
                        app:elevation="4dp"
                        app:backgroundTint="@android:color/transparent"
                        android:background="@drawable/button_gradient"
                        app:icon="@drawable/saveicon"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconTint="@color/white"
                        android:stateListAnimator="@animator/button_scale_animator" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Mood History Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mood_history"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/historyicon"
                    android:alpha="0.8"
                    app:tint="@color/accent_purple" />

                <!-- Clear Mood History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clearMoodHistoryButton"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circular_clear_button"
                    android:contentDescription="Clear mood history"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="20dp"
                    app:iconTint="@color/error_red"
                    android:elevation="4dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- RecyclerView with Layout Animation -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mood_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:layoutAnimation="@anim/layout_animation_fall_down"
                tools:listitem="@layout/item_mood" />

            <!-- Empty State with Animation -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/empty_state_bg"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/empty_state_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/emptymood"
                        android:alpha="0.6"
                        app:tint="@color/accent_purple" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No mood entries yet"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Select a mood above to start tracking your emotions"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:alpha="0.8"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>